@model NatDMS.Models.DistributorDetailsViewModel

@{
    ViewData["Title"] = "DistributorDetailsBYId";
}

<h2>Distributor Details</h2>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-r5ID+CgK5ba4ZL3a39OXhMWSktQOp6cJS7wePqOx6bSSUnQlmh/jQ9vS9z5+X68+H" crossorigin="anonymous">

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<style>
    .blue-text {
        color: firebrick;
    }

    .bold-text {
        font-weight: bold;
    }

    .info-box {
        border: 2px solid brown;
        padding: 20px;
        margin-top: 20px;
    }
        .red-border
        {
        border: 2px solid black;
        }
    
</style>

<div class="container mt-10">
    <div class="row">
        <div class="col-md-10">
            <div class="d-flex justify-content-end">
                <a href="@Url.Action("EditDistributor", new { id = Model.Distributors.Id })" class="d-flex align-items-end">
                    <i class="material-icons" style="font-size:20px;">edit</i>
                    <span class="ml-2" style="font-weight:bold;">EDIT</span>
                </a>
            </div>
           

            <div>
                <dl class="row">
                    <dt class="col-sm-3 blue-text">
                        @Html.DisplayNameFor(model => model.Distributors.FirstName)
                    </dt>
                    <dd class="col-sm-3 bold-text">
                        @Html.DisplayFor(model => model.Distributors.FirstName)
                    </dd>

                    <dt class="col-sm-3 blue-text">
                        @Html.DisplayNameFor(model => model.Distributors.LastName)
                    </dt>
                    <dd class="col-sm-3 bold-text">
                        @Html.DisplayFor(model => model.Distributors.LastName)
                    </dd>

                    <dt class="col-sm-3 blue-text">
                        @Html.DisplayNameFor(model => model.Distributors.Address)
                    </dt>
                    <dd class="col-sm-3 bold-text">
                        @Html.DisplayFor(model => model.Distributors.Address)
                    </dd>

                    <dt class="col-sm-3 blue-text">
                        @Html.DisplayNameFor(model => model.Distributors.Email)
                    </dt>
                    <dd class="col-sm-3 bold-text">
                        @Html.DisplayFor(model => model.Distributors.Email)
                    </dd>

                    <dt class="col-sm-3 blue-text">
                        @Html.DisplayNameFor(model => model.Distributors.State)
                    </dt>
                    <dd class="col-sm-3 bold-text">
                        @Html.DisplayFor(model => model.Distributors.State)
                    </dd>

                    <dt class="col-sm-3 blue-text">
                        @Html.DisplayNameFor(model => model.Distributors.City)
                    </dt>
                    <dd class="col-sm-3 bold-text">
                        @Html.DisplayFor(model => model.Distributors.City)
                    </dd>

                    <dt class="col-sm-3 blue-text">
                        @Html.DisplayNameFor(model => model.Distributors.Area)
                    </dt>
                    <dd class="col-sm-3 bold-text">
                        @Html.DisplayFor(model => model.Distributors.Area)
                    </dd>
                </dl>

                <h4 style="color: brown; padding: 10px;">Assigned Retailors</h4>

                <table class="table red-border" style="border-collapse: collapse;">
                    <thead>
                        <tr class="red-border">
                            <th class="red-border">FirstName</th>
                            <th class="red-border">LastName</th>
                            <th class="red-border">Email</th>
                            <th class="red-border">MobileNumber</th>
                            <th class="red-border">Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var retailor in Model.AssignedRetailors)
                        {
                            <tr class="red-border">
                                <td class="red-border">@retailor.FirstName</td>
                                <td class="red-border">@retailor.LastName</td>
                                <td class="red-border">@retailor.Email</td>
                                <td class="red-border">@retailor.MobileNumber</td>
                                <td class="red-border">@retailor.Address</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

<div class="text-center py-1">
    <a href="@Url.Action("DisplayDistributors")" class="d-flex align-items-center">
        <i class="material-icons" style="font-size:20px;">arrow_back</i>
        <span class="ml-2" style="font-weight: bold;">BACK TO LIST</span>
    </a>
</div>
