                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Retailor, new { @id = "distributor" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderBy, new { @id = "orderBy" })
                    </td>
