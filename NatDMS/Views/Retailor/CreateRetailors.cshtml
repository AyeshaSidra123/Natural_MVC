@model NatDMS.Models.SaveRetailorViewModel

@{
    ViewData["Title"] = "CreateRetailors";
}

<h4>CreateRetailors</h4>

<hr/>
<div class="row">
    <div class="col-md-4">

            <form asp-action="CreateRetailors" onsubmit="event.preventDefault();submitForm();">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <b>
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </b>
            </div>

            <div class="form-group">
                <b>
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </b>
            </div>
            <div class="form-group">
                <b>
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </b>
            </div>
            <div class="form-group">
                <b>
                    <label asp-for="MobileNumber" class="control-label"></label>
                    <input asp-for="MobileNumber" class="form-control" />
                </b>
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <b>
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </b>
            </div>



            <div class="form-group">
                <b>
                    @Html.LabelFor(model => model.State, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("name", new SelectList(ViewBag.State, "Id", "StateName"),new { id = "state", onchange = "statechange()" })
                    </div>
                </b>
            </div>
            <div class="form-group">
                <b>
                    <style>
                        #city option {
                            color: burlywood; /* Change this to the desired text color */
                        }
                    </style>
                    @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "control-label col-md-2" })
                </b>
                <div class=" col-md-10">
                    <select id="city" onchange="citychange()">
                        <option value="select"> </option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <b>
                    <label asp-for="Area" class="control-label"></label>
                    <div class="col-md-10">
                        <select id="area">
                            <option value="select"> </option>
                        </select>
                    </div>
                    <span asp-validation-for="Area" class="text-danger"></span>
                </b>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>


        </form>

    </div>

    <script src="~/js/jquery-3.6.0.min.js"></script>

    <script type="text/javascript">
        function statechange() {
            debugger;
            alert("hello")
            var stid = $('#state').val();
            if (stid.trim() != '') {
                var ddlcity = $('#city');
                ddlcity.empty();

                $.ajax(
                    {
                        url: "/Retailor/cityData",

                        type: 'GET',
                        dataType: 'json',
                        data: { Id: stid },

                        success: function (d) {
                            alert("Success")

                            ddlcity.append($("<option></option>").val('').html('SelectCity'));
                            $.each(d, function (i, cities) {

                                ddlcity.append($("<option>" + cities.cityName + "</option>").val(cities.id).html(cities.cityName));

                            });
                        },
                        error: function () {
                            alert('Error!');
                        }
                    });
            }

        }

        function citychange() {
            debugger;
            alert("hello")
            var stid = $('#city').val();
            if (stid.trim() != '') {
                var ddlarea = $('#area');
                ddlarea.empty();

                $.ajax(
                    {
                        url: "/Retailor/GetArea",

                        type: 'GET',
                        dataType: 'json',
                        data: { Id: stid },

                        success: function (d) {
                            alert("Success")

                            ddlarea.append($("<option></option>").val('').html('SelectArea'));
                            $.each(d, function (i, areas) {

                                ddlarea.append($("<option>" + areas.areaName + "</option>").val(areas.id).html(areas.areaName));

                            });
                        },
                        error: function () {
                            alert('Error!');
                        }
                    });
            }

        }
            function submitForm() {
                var stateId = $('#state').val();
                var cityId = $('#city').val();
                var areaId = $('#area').val();

                var formData = {
                    FirstName: $('#FirstName').val(),
                    LastName: $('#LastName').val(),
                    Email: $('#Email').val(),
                    MobileNumber: $('#MobileNumber').val(),
                   Address: $('#Address').val(),


                    StateId: stateId,
                    CityId: cityId,
                    AreaId: areaId
                };

            $.ajax({
                url: "/Retailor/CreateRetailors",
                type: 'POST',
                data:{
                    retailor: formData,
                    stateId: stateId,
                    cityId: cityId,
                    areaId: areaId
                },
                success: function (data) {
                    alert("Form submitted successfully");
                    // Optionally, redirect or perform additional actions
                },
                error: function () {
                    alert('Error submitting form!');
                }
            });
        }
    </script>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}