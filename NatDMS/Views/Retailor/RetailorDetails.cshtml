@model NatDMS.Models.SaveRetailorViewModel

@{
    ViewData["Title"] = "RetailorDetails";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-r5ID+CgK5ba4ZL3a39OXhMWSktQOp6cJS7wePqOx6bSSUnQlmh/jQ9vS9z5+X68+H" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <style>
        .larger-text {
            font-size: 1.5em; 
        }
    </style>
</head>
<body>
    @if (Model != null)
    {
        <div class="container mt-4">
            <div class="row d-flex justify-content-center">
                <div class="col-md-9">
                    <dl class="row larger-text">
                        <dt class="col-sm-3">First Name:</dt>
                        <dd class="col-sm-9">@Model.FirstName</dd>

                        <dt class="col-sm-3">Last Name:</dt>
                        <dd class="col-sm-9">@Model.LastName</dd>

                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Mobile Number:</dt>
                        <dd class="col-sm-9">@Model.MobileNumber</dd>

                        <dt class="col-sm-3">Address:</dt>
                        <dd class="col-sm-9">@Model.Address</dd>

                        <dt class="col-sm-3">State:</dt>
                        <dd class="col-sm-9">@Model.State</dd>

                        <dt class="col-sm-3">City:</dt>
                        <dd class="col-sm-9">@Model.City</dd>

                        <dt class="col-sm-3">Area:</dt>
                        <dd class="col-sm-9">@Model.Area</dd>
                    </dl>
                </div>
            </div>
        </div>
    }

    <div class="back-to-list" style="text-align:center">
        <a href="@Url.Action("DisplayRetailors")" class="d-flex align-items-center">
            <i class="material-icons" style="font-size: 50px;">arrow_back</i>
        </a>
    </div>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY9iD/2fcF/JAIaWyjBwe5+o/m9PT4TkI4I6Ml" crossorigin="anonymous"></script>

</body>
</html>
