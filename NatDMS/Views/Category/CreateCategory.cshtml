@model NatDMS.Models.CategoryViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Category</title>
    <link rel="stylesheet" type="text/css" href="~/css/my.css">

</head>
<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 custom-box">
                <h4 class="text-center mb-4">Create Category</h4>

                <form asp-action="CreateCategory" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <b>
                        <label asp-for="CategoryName" class="control-label"></label>
                        <input asp-for="CategoryName" class="form-control" required />
                        <div class="invalid-feedback">
                            @Html.ValidationMessageFor(model => model.CategoryName)
                        </div>
                        </b>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form>

               
            </div>
        </div>
    </div>

  
</body>
</html>
