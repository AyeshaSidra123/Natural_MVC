    <div class="container my-4">
        @using (Html.BeginForm("Index9", "GuestProduct", FormMethod.Post))
        {
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group">
                        <b>
                            @Html.LabelFor(model => model.ProductName)
                            @Html.TextBoxFor(model => model.ProductName, new
                            {
                                @class = "form-control",
                        placeholder = "Enter FirstName",
                                onfocus = "movePlaceholder(this)"
                            })
                            @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })

                        </b>
                    </div>
                </div>



                <div class="col-md-2">
                    <div class="form-group">
                        <b>
                            @Html.LabelFor(model => model.Category)
                            @Html.DropDownListFor(model => model.Category, new SelectList(Model.CategoryList, "Id", "CategoryName"),
                        "-SelectState-", new { @id = "state", onchange = "statechange()", @class = "form-select" })
                            @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                        </b>
                    </div>
                </div>


                <div class="col-md-2">
                    <div class="form-group">
                        <button type="submit" class="btn btn-secondary my-4">
                            <i class="material-icons" style="font-size:20px;display:flex;justify-content:center;
                                align-items:center;">search</i>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
    <!----------------------------------------------------DISPLAY PRODUCT LIST-------------------------------------------------------------->

    <div class="container">
        <div class="row" id="Distributorlist">
            @foreach (var product in Model.product)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card mb-4 box-shadow">
                        @if (!string.IsNullOrEmpty(product.PresignedUrl))
                        {
                            <img class="card-img-top img-fluid" src="@product.PresignedUrl" alt="@product.ProductName">
                        }
                        else
                        {
                            <!-- Display a default "no image" placeholder -->
                            <img class="card-img-top img-fluid" src="~/image/no-image-placeholder.svg" alt="No Image">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@product.Category</h5>
                            <p class="card-text">@product.ProductName</p>
                            <p class="card-text"> ₹ @product.Price</p>
                            <p class="card-text">@product.Weight gms</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
