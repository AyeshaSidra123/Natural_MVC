@model DisplayProduct_View
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/dm-project-style.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        <style >
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .top-section {
            background-color: #YourColorOfChoice; /* Set the background color of your choice */
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
        }

        .logo-container img {
            max-width: 100%;
            height: auto;
        }

        .dropdown-search-container {
            display: flex;
            align-items: center;
        }

        /* Add more styling as needed for the rest of your MVC application */
    </style>
    <title>Your MVC Application</title>
</head>
<body>

    <!-- Top Section -->
    <div class="top-section">
        <div class="logo-container">
            @*<img src="path/to/your/logo.png" alt="Logo">*@
            <img src="~/image/logo1.jpg" alt="logo-image" class="img-responsive">
        </div>
      
            <!-- Your dropdown and search box go here -->
            <select class="form-control">
                <div class="container my-4">
                    @using (Html.BeginForm("Index10", "GuestProduct", FormMethod.Post))
                    {
                        <div class="row">
                            <div class="col-md-2">
                                <div class="form-group">
                                    <b>
                                        @Html.LabelFor(model => model.ProductName)
                                        @Html.TextBoxFor(model => model.ProductName, new
                                        {
                                            @class = "form-control",
                                    placeholder = "Enter FirstName",
                                            onfocus = "movePlaceholder(this)"
                                        })
                                        @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })

                                    </b>
                                </div>
                            </div>



                            <div class="col-md-2">
                                <div class="form-group">
                                    <b>
                                        @Html.LabelFor(model => model.Category)
                                        @Html.DropDownListFor(model => model.Category, new SelectList(Model.CategoryList, "Id", "CategoryName"),
                                    "-SelectState-", new { @id = "state", onchange = "statechange()", @class = "form-select" })
                                        @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                                    </b>
                                </div>
                            </div>


                            <div class="col-md-2">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-secondary my-4">
                                        <i class="material-icons" style="font-size:20px;display:flex;justify-content:center;
                                align-items:center;">search</i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- Add more options as needed -->
            </select>
            @*<input type="text" class="form-control" placeholder="Search...">*@
        
    </div>
    <div class="container">
        <div class="row">
            @foreach (var product in Model.product)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card mb-4 box-shadow">
                        @if (!string.IsNullOrEmpty(product.PresignedUrl))
                        {
                            <img class="card-img-top img-fluid" src="@product.PresignedUrl" alt="@product.ProductName">
                        }
                        else
                        {
                            <!-- Display a default "no image" placeholder -->
                            <img class="card-img-top img-fluid" src="~/image/no-image-placeholder.svg" alt="No Image">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@product.Category</h5>
                            <p class="card-text">@product.ProductName</p>
                            <p class="card-text"> ₹ @product.Price</p>
                            <p class="card-text">@product.Weight gms</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- Rest of your MVC content goes here -->
    <!-- Bootstrap JS and dependencies (optional) -->
    <meta name="viewport" content="width=device-width" />
    <title>Index7</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/dm-project-style.css">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>

   
        .card-img-top {
            height: 300px; /* Adjust the height as needed */
            object-fit: cover; /* Maintain aspect ratio and cover the entire container */
        }
    </style>
</body>
</html>
