@model DisplayProduct_View
@{
    Layout = null;
   
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <title>Natural Product</title>

  @*   <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/dm-project-style.css">
    <link rel="stylesheet" type="text/css" href="~/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"> *@

    <!-- Bootstrap 4 CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/dm-project-style.css">
    <link rel="stylesheet" type="text/css" href="~/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- jQuery and Bootstrap 4 JS -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            overflow-x: hidden; /* Hide horizontal scrollbar */
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            height: 100vh;
        }

        .contactBar {
            text-align: right;
            color: white;
            padding: 10px 30px 10px 10px;
            width: 100%;
            background-color: #DEB887;
        }

        #logo {
            width: 10rem;
            max-height: 15vh; /* 20% of the viewport height */
        }

        #search {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 0px;
        }

        .form-group {
            margin-top: 10px;
        }

        .form-control {
            border-radius: 0px;
        }


        .btn-search {
            background-color: #DEB887;
            color: #fff;
            border: none;
            padding: 0px 20px;
            cursor: pointer;
            height: 36px;
            border-radius: 0px;
        }

        .btn-search i {
                font-size: 25px;
                display: flex;
                justify-content: center;
                align-items: center;
        }

        .card-img-top {
            margin-top: 10px;
            height: 150px;
            object-fit: contain;
            transition: transform .25s ease; /* Smooth transition for hover effect */
        }

        .card-img-top:hover {
                transform: scale(1.25); /* Scale up the image slightly on hover */
        }

        .cardBox {
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Carousel styles */
        .carousel-item {
            height: 300px; /* Set a fixed height for the carousel items */
        }

        .carousel-item img {
                height: 100%;
                object-fit: cover; /* Ensure the image covers the container */
        }

        .inside-border {
            border: 1px solid #DEB887;
            padding: 5px;
            display: inline-block;
            border-radius: 5px;
        }

        .card-title {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            display: block;
        }
        
   
    </style>
    
</head>
<body>

        <div class="contactBar">
           <i class="fa fa-phone hot-l"></i>
             <b><span class="">0123 456 789</span></b>
        </div>
       
       
        <!-- Search Section -->
        <div class="container-fluid" id="search">
        @using (Html.BeginForm("Index11", "GuestProduct", FormMethod.Post, new { @class = "" }))

           {
             <div class="row">
                <!-- Logo Section -->
                <div class="logoCon col-12 col-sm-3 col-md-4">
                <a class="d-flex align-items-center">
                    <img src="~/image/logo1.jpg" alt="logo-image" class="img-responsive" id="logo">
                   </a>
                </div>

            
                <div class="form-group col-12 col-sm-3 col-md-3">
                   @*  @Html.LabelFor(model => model.Category, new { @class = "font-weight-bold mr-1" }) *@
                    @Html.DropDownListFor(model => model.Category, new SelectList(Model.CategoryList, "Id", "CategoryName"), "Select Category", new { @class = "form-control categoryBox"})
                </div>


                <div class="form-group col-12 col-sm-3 col-md-3">


                   @*  <label for="presignedurl-label" class="control-label" id="image" style="font-weight: bold; margin-right:5px">  <span></span></label> *@
                    @Html.TextBoxFor(model => model.ProductName, new{@class = "form-control productBox",placeholder = "Product Name"})

                </div>

                <div class="form-group col-12 col-md-2">
                     <button type="submit" class="btn btn-search">
                            <i class="material-icons">search</i>
                     </button>
                </div>
             </div>
                
           }
        </div>

        <!-- Carousel Section -->
        <div class="container-fluid px-0 mb-4">
        <div id="carouselIndicators" class="carousel slide" data-ride="carousel" data-interval="3000">
                <ol class="carousel-indicators">
                    <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselIndicators" data-slide-to="2"></li>
                </ol>
             <div class="carousel-inner ">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="@Url.Content("~/image/p1.jpg")" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@Url.Content("~/image/p4.jpg")" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@Url.Content("~/image/p3.jpg")" alt="Third slide">
                </div>
             </div>
                <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
          </div>
       </div>

        <div class="headingS m-3 d-flex justify-content-center">
            <h4 style="">Our Products</h4>
        </div>
      
                <!-- Content Section -->
    <div class="container-fluid">
            <div class="row">
                @foreach (var product in Model.product)
                    {
                    <div class="col-6 col-sm-4 col-md-3 col-lg-2 p-1">
                        <div class="card cardBox mb-3">
                        @if (!string.IsNullOrEmpty(product.Image))
                        {
                          <img class="card-img-top img-fluid" src="@product.Image" alt="@product.ProductName">
                        }
                        else
                        {
                         <!-- Display a default "no image" placeholder -->
                         <img class="card-img-top img-fluid" src="~/image/no-image-placeholder.svg" alt="No Image">
                        }
                               
                        <div class="card-body text-center">

                           <h5 class="card-title" data-toggle="tooltip" title="@product.Category">@product.Category</h5>
                           <p class="card-text">@product.ProductName</p>
                           <p class="card-title inside-border" data-toggle="tooltip">@product.Weight gms - ₹@product.Price </p>
                                   
                        </div> 

                    </div>
                </div>
                }
            </div>
       </div>


    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
  

</body>
</html>

