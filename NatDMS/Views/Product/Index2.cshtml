<!DOCTYPE html>
<html>
<head>
    <!-- Other head elements -->
    <style>
        div.scroll-container {
            background-color: #fff; /* Set the background color to white */
            overflow-x: auto; /* Horizontal scrolling */
            overflow-y: auto; /* Vertical scrolling */
            white-space: nowrap;
            padding: 10px;
            max-width: 600px; /* Set the maximum width of the container */
            margin: auto; /* Center the container on the page */
        }

            div.scroll-container .product-item {
                display: inline-block; /* Display images in a horizontal line */
                text-align: center;
                padding: 10px;
                color: #333; /* Text color for better visibility on white background */
                max-width: 200px; /* Set the maximum width of each item */
            }

            /* Add a class for vertical items */
            div.scroll-container .vertical-item {
                display: block; /* Display images in a vertical line */
                text-align: center;
                padding: 10px;
                color: #333; /* Text color for better visibility on white background */
                max-width: 200px; /* Set the maximum width of each item */
                margin: 10px auto; /* Center the vertical items and add some margin */
            }
    </style>
</head>
<body>
    <!-- Body content -->

    <h2>Product Catalog</h2>

    <div class="scroll-container">
        @*@foreach (var product in Model)
        {
            <div class="product-item">
                <img src="@product.PresignedUrl" alt="ProfileImage" width="200" height="200" class="img-responsive" id="presignedurl" />
                <p>@product.Product1.</p>
                <p>@product.Category</p>
            </div>
        }*@
        @foreach (var product in Model.Take(3))
                //Display the first three items horizontally -->
        {
        <div class="product-item">
            <img src="@product.PresignedUrl" alt="ProfileImage" width="200" height="200" class="img-responsive" id="presignedurl" />
            <p>@product.Category</p>
            <p>@product.ProductName</p>
        </div>
        }

        @foreach (var product in Model.Skip(3))
                //Display the remaining items vertically -->
        {
        <div class="vertical-item">
            <img src="@product.PresignedUrl" alt="ProfileImage" width="200" height="200" class="img-responsive" id="presignedurl" />
            <p>@product.Category</p>
            <p>@product.ProductName</p>
        </div>
        }
    </div>
    </div>
</body>
