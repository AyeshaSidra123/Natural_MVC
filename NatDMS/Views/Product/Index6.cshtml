@model IEnumerable<NatDMS.Models.EditProduct>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa; /* Set background color for the entire page */
        }

        .product-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            margin-bottom: 20px;
        }

            .product-item img {
                width: 100%; /* Ensure the image takes up 100% of its container */
                height: auto; /* Maintain the aspect ratio */
            }
    </style>
</head>
<body>
    <div class="container mt-4 bg-white">
        <!-- Add bg-white class here -->
        <h2>Product Catalog</h2>

        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-sm-4 col-md-3 col-lg-2">
                    <div class="product-item">
                        <img src="@product.PresignedUrl" alt="ProfileImage" class="img-fluid" />
                        <div class="mt-2">
                            <!-- Add margin-top for category and product -->
                            <p>@product.Category</p>
                            <p>@product.ProductName</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
